<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greypannel"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical"
            >
            <com.liveroads.ui.search.SearchResultEntryView
                android:id="@+id/lr_recentSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                />

            <RelativeLayout
                android:id="@+id/lr_recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/lr_padding_normal"
                android:paddingBottom="@dimen/lr_padding_normal"
                android:background="@color/greypannel"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                    android:drawableTint="@color/black75Alpha"
                    android:drawablePadding="@dimen/lr_margin_normal"
                    android:text="More Recent History"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/lr_margin_normal"
                    android:textAllCaps="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/home_address_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_home_black_24dp"
                        android:backgroundTint="@color/black75Alpha"
                        android:layout_marginLeft="@dimen/lr_margin_normal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/lr_margin_normal"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/mapbox_blue"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textAllCaps="true"
                        android:text="Set Home Address"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/set_home_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible"
                    android:clickable="true"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/lr_margin_normal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:text="Home"
                            />

                        <TextView
                            android:id="@+id/home_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_home_black_24dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:drawablePadding="@dimen/lr_padding_small"
                            android:drawableTint="@color/black75Alpha"
                            android:text="381 Front St"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text="12.5km"
                        android:layout_marginRight="@dimen/lr_margin_normal"
                        />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/work_address_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_work_black_24dp"
                        android:backgroundTint="@color/black75Alpha"
                        android:layout_marginLeft="@dimen/lr_margin_normal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/lr_margin_normal"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/mapbox_blue"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textAllCaps="true"
                        android:text="Set Work Address"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/set_work_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible"
                    android:clickable="true"
                    android:focusable="true"
                    >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/lr_margin_normal"
                        android:layout_marginRight="@dimen/lr_margin_normal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:text="Work"
                            />

                        <TextView
                            android:id="@+id/work_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/ic_work_black_24dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:drawablePadding="@dimen/lr_padding_small"
                            android:drawableTint="@color/black75Alpha"
                            android:text="381 Front St"
                            android:textStyle="bold"
                            android:maxLines="1"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/work_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:text="12.5km"
                        android:layout_marginRight="@dimen/lr_margin_normal"
                        />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>