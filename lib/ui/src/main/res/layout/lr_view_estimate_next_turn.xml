<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:background="@color/lr_estimate_large_map_bg"
  android:layout_width="match_parent"
  android:layout_height="@dimen/lr_estimate_panel_height"
  tools:parentTag="android.support.constraint.ConstraintLayout"
  tools:ignore="RtlHardcoded"
  >

  <TextView
    android:id="@+id/next_turn_street"
    tools:text="Lake Shore Blvd W"
    android:drawableLeft="@drawable/lr_ic_estimate_turn_left"
    android:textAppearance="@style/Estimation.TextAppearance"
    style="@style/Estimation.Style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:drawablePadding="8dp"
    android:ellipsize="end"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_chainStyle="packed"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"/>

  <TextView
    android:id="@+id/next_turn_distance"
    tools:text="498 M"
    android:textAppearance="@style/Estimation.TextAppearance"
    style="@style/Estimation.Style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginRight="24dp"/>

</merge>
